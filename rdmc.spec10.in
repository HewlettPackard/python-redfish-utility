%{_sbindir}/ilorest
%{_bindir}/genapptoken
%{_bindir}/delapptoken
%{_bindir}/detectonly
%attr(755, root, root) %{_libdir}/ilorest_chif.so
%config(noreplace) %{_sysconfdir}/ilorest/*
%dir %{_sysconfdir}/ilorest

